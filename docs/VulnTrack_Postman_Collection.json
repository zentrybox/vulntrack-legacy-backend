{
  "info": {
    "name": "VulnTrack - Vulnerability Scanning API",
    "description": "Complete API collection for VulnTrack vulnerability scanning backend",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "sample_device_id",
      "value": "12345678-1234-1234-1234-123456789abc",
      "type": "string"
    },
    {
      "key": "sample_device_id_2",
      "value": "87654321-4321-4321-4321-cba987654321",
      "type": "string"
    },
    {
      "key": "brave_api_key",
      "value": "YOUR_BRAVE_API_KEY_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "System Status",
      "item": [
        {
          "name": "Welcome / Health Check",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Basic health check endpoint"
          }
        },
        {
          "name": "Get Vulnerability Scan Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "status"]
            },
            "description": "Check vulnerability scanning system status and configuration"
          }
        }
      ]
    },
    {
      "name": "Device Management",
      "item": [
        {
          "name": "List All Devices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/devices/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "devices", ""]
            },
            "description": "Get all registered devices"
          }
        },
        {
          "name": "Create Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hostname\": \"firewall-01.company.com\",\n  \"ip_address\": \"192.168.1.100\",\n  \"brand\": \"Palo Alto Networks\",\n  \"model\": \"PA-220\",\n  \"version\": \"9.1.3\",\n  \"device_type\": \"firewall\",\n  \"location\": \"Main Office\",\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/devices/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "devices", ""]
            },
            "description": "Register a new device for vulnerability scanning"
          }
        },
        {
          "name": "Get Device by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/devices/{{sample_device_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "devices", "{{sample_device_id}}"]
            },
            "description": "Get device details by UUID"
          }
        },
        {
          "name": "Update Device",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hostname\": \"firewall-01-updated.company.com\",\n  \"ip_address\": \"192.168.1.100\",\n  \"brand\": \"Palo Alto Networks\",\n  \"model\": \"PA-220\",\n  \"version\": \"9.1.4\",\n  \"device_type\": \"firewall\",\n  \"location\": \"Main Office\",\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/devices/{{sample_device_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "devices", "{{sample_device_id}}"]
            },
            "description": "Update device information"
          }
        },
        {
          "name": "Delete Device",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/devices/{{sample_device_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "devices", "{{sample_device_id}}"]
            },
            "description": "Delete device from system"
          }
        }
      ]
    },
    {
      "name": "Vulnerability Scanning",
      "item": [
        {
          "name": "Full Device Vulnerability Scan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/device/{{sample_device_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "device", "{{sample_device_id}}"]
            },
            "description": "Complete vulnerability scan: local CVE database + web search + AI analysis"
          }
        },
        {
          "name": "Local CVE Database Scan Only",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/device/{{sample_device_id}}/local",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "device", "{{sample_device_id}}", "local"]
            },
            "description": "Fast scan using only local MongoDB CVE database"
          }
        },
        {
          "name": "AI Knowledge Scan Only",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/device/{{sample_device_id}}/ai",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "device", "{{sample_device_id}}", "ai"]
            },
            "description": "Scan using only Gemini AI built-in knowledge"
          }
        },
        {
          "name": "Web Search + AI Scan Only",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/device/{{sample_device_id}}/web",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "device", "{{sample_device_id}}", "web"]
            },
            "description": "Scan using web search + AI filtering (most comprehensive)"
          }
        },
        {
          "name": "Quick Vulnerability Check",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/device/{{sample_device_id}}/quick",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "device", "{{sample_device_id}}", "quick"]
            },
            "description": "Quick vulnerability check (alias for local scan)"
          }
        },
        {
          "name": "Batch Device Scan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\n  \"{{sample_device_id}}\",\n  \"{{sample_device_id_2}}\"\n]"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/vulnerabilities/scan/devices/batch",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "vulnerabilities", "scan", "devices", "batch"]
            },
            "description": "Scan multiple devices in batch (max 50)"
          }
        }
      ]
    },
    {
      "name": "External API Testing",
      "item": [
        {
          "name": "Brave Search API Test (Clean Parameters)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Accept-Encoding",
                "value": "gzip"
              },
              {
                "key": "X-Subscription-Token",
                "value": "{{brave_api_key}}"
              }
            ],
            "url": {
              "raw": "https://api.search.brave.com/res/v1/web/search?q=Palo Alto Networks PA-220 9.1.3 vulnerability CVE security exploit&count=10&freshness=py&result_filter=web",
              "protocol": "https",
              "host": ["api", "search", "brave", "com"],
              "path": ["res", "v1", "web", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "Palo Alto Networks PA-220 9.1.3 vulnerability CVE security exploit"
                },
                {
                  "key": "count",
                  "value": "10"
                },
                {
                  "key": "freshness",
                  "value": "py"
                },
                {
                  "key": "result_filter",
                  "value": "web"
                }
              ]
            },
            "description": "Test Brave Search API with clean parameters (no language or country parameters)"
          }
        },
        {
          "name": "Brave Search API Test - Cisco ASA",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Accept-Encoding",
                "value": "gzip"
              },
              {
                "key": "X-Subscription-Token",
                "value": "{{brave_api_key}}"
              }
            ],
            "url": {
              "raw": "https://api.search.brave.com/res/v1/web/search?q=Cisco ASA 5505 8.2.5 vulnerability CVE security exploit&count=10&freshness=py&result_filter=web",
              "protocol": "https",
              "host": ["api", "search", "brave", "com"],
              "path": ["res", "v1", "web", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "Cisco ASA 5505 8.2.5 vulnerability CVE security exploit"
                },
                {
                  "key": "count",
                  "value": "10"
                },
                {
                  "key": "freshness",
                  "value": "py"
                },
                {
                  "key": "result_filter",
                  "value": "web"
                }
              ]
            },
            "description": "Test Brave Search API with Cisco ASA example"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Add any pre-request scripts here",
          "console.log('VulnTrack API Request Starting...');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Status code is 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('Response has JSON content', function () {",
          "    pm.response.to.be.json;",
          "});"
        ]
      }
    }
  ]
}
